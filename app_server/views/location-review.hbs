<!-- I am rendered inside of layout.hbs --> 

<div class="row banner">
	<div class="col-12">
		<h1>Review Starcups</h1>
	</div>
</div>

<div class="row">
	<div class="col-12 col-lg-9">
		<form action="/location" method="post" role="form">
			<div class="form-group row">
				<label class="col-10 col-sm-2 col-form-label" for="name">Name</label>
				<div class="col-12 col-sm-10">
					<input id="name" class="form-control" name="name"></input>
				</div>
			</div>

			<div class="form-group row">
				<label class="col-10 col-sm-2 col-form-label" for="name">Rating</label>
				<div class="col-12 col-sm-2">
					<select id="rating" class="form-control input-sm" name="rating">
						<option>5</option>
						<option>4</option>
						<option>3</option>
						<option>2</option>
						<option>1</option>
					</select>
				</div>
			</div>

			<div class="form-group row">
				<label class="col-10 col-sm-2 col-form-label" for="name">Review</label>
				<div class="col-sm-10">
					<textarea id="review" class="form-control" name="review"></textarea>
				</div>
			</div>

			<button class="btn btn-primary float-right">Add my review</button>
		</form>
	</div>
	<div class="col-12 col-md-4"></div>
</div>