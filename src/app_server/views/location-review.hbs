<!-- I am rendered inside of layout.hbs -->
{{#if message }}
<div class="row banner">
  <div class="col-12">
    <h4 id="message">{{ message }}</h4>
  </div>
</div>
{{/if}}

<div class="row banner">
  <div class="col-12">
    <h1>{{ pageHeader.title }}</h1>
  </div>
</div>

<div class="row">
  <div class="col-12 col-lg-9">
    {{#if review }}
    Thanks for submitting a review!
    {{else }}
    <form action="/location/review/new" method="post" role="form">
      <input type="hidden" name="id" value="{{ id }}" />
      <div class="form-group row">
        <label class="col-10 col-sm-2 col-form-label" for="name">Name</label>
        <div class="col-12 col-sm-10">
          <input id="name" class="form-control" name="name"></input>
        </div>
      </div>

      <div class="form-group row">
        <label class="col-10 col-sm-2 col-form-label" for="rating">Rating</label>
        <div class="col-12 col-sm-2">
          <select id="rating" class="form-control input-sm" name="rating">
            <option>5</option>
            <option>4</option>
            <option>3</option>
            <option>2</option>
            <option>1</option>
          </select>
        </div>
      </div>

      <div class="form-group row">
        <label class="col-10 col-sm-2 col-form-label" for="text">Review</label>
        <div class="col-sm-10">
          <textarea id="review" class="form-control" name="text"></textarea>
        </div>
      </div>

      <button class="btn btn-primary float-right">Add my review</button>
    </form>
    {{/if}}

  </div>
  <div class="col-12 col-md-4"></div>
</div>